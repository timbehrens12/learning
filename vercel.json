{
  "buildCommand": "cd web && npm install && npm run build",
  "outputDirectory": "web/dist",
  "installCommand": "cd api && npm install && cd ../web && npm install",
  "framework": "vite",
  "functions": {
    "api/webhook.js": {
      "maxDuration": 30,
      "includeFiles": "api/webhook.js"
    },
    "api/create-checkout.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}

